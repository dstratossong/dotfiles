Config {

    -- appearance
      font                     = "xft:Bitstream Vera Sans Mono:pixelsize=11:antialias=true"
    , bgColor                  = "black"
    , fgColor                  = "#72FFD1"
    , alpha                    = 199
    , position                 = Top
    -- , border                   = BottomB
    -- , borderColor              = "grey"

    -- layout
    , sepChar                  = "%"
    , alignSep                 = "}{"
    , template                 = " %StdinReader% }{ <fc=#72FFD1>Cpu</fc> %multicpu% <fc=#72FFD1>| Mem</fc> %memory% <fc=#72FFD1>| Net</fc> %dynnetwork% %wifisignal% <fc=#72FFD1>| Vol</fc> %volume% <fc=#72FFD1>| Pow</fc> %battery% <fc=#72FFD1>|</fc> %date% "

    -- general behavior
    , lowerOnStart             = True
    , hideOnStart              = False
    , allDesktops              = True
    , overrideRedirect         = True
    , pickBroadest             = False
    , persistent               = True

    -- plugins
    , commands =

        -- network activity monitor
        [ Run DynNetwork     [ "--template" , "<tx> <rx>kB/s"
                             , "--Low"      , "100000"
                             , "--High"     , "500000"
                             , "--low"      , "darkgreen"
                             , "--normal"   , "blue"
                             , "--high"     , "lightblue"
                             ] 10

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "<autototal>%"
                             , "--Low"      , "30"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "orange"
                             , "--high"     , "red"
                             ] 10

        -- memory usage monitor
        , Run Memory         [ "--template" ,"<usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "orange"
                             , "--high"     , "red"
                             ] 10

        -- battery monitor
        , Run Battery        [ "--template" , "<acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "red"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkgreen"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>%"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#dAA520><left>% charging</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=#006000>full</fc>"
                             ] 50

        -- time and date indicator 
        --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
        , Run Date           "%F (%a) %T" "date" 10

        -- standard input
        , Run StdinReader

        -- wifi signal
        , Run Com "/home/glados/.bin/wireless.sh" [] "wifisignal" 10

        -- volume
        , Run Com "/home/glados/.bin/volume.sh" [] "volume" 10
        ]
}
