! .Xresources


! --- cursor ---
! Xcursor.theme:                        Simple-and-Soft
Xcursor.size:                         16

! --- urxvt.background ---
URxvt.depth:                          32
URxvt.background:                     [75]#000000
URxvt.transparent:                    false

! --- urxvt.scroll ---
URxvt.scrollBar:                      false
URxvt.scrollTtyOutput:                false
URxvt.scrollWithBuffer:               true
URxvt.scrollTtyKeypress:              true
URxvt.secondaryScreen:                0
URxvt.secondaryScroll:                0

! --- urxvt.cursor ---
URxvt.cursorUnderline:                true
URxvt.cursorBlink:                    true

! --- urxvt.font ---
URxvt.font:                           xft:DejaVu Sans Mono:pixelsize=14
URxvt.boldFont:                       xft:DejaVu Sans Mono:bold:pixelsize=14

! --- urxvt.spacing ---
URxvt.letterSpace:                    -2
URxvt.lineSpace:                      1

! --- urxvt.foreground ---
URxvt.foreground:                     #DDDDDD

! --- urxvt.miscellaneous ---
URxvt.loginShell:                     false
URxvt.saveLines:                      2000
URxvt.iso14755:                       False

! --- urxvt.extensions ---
URxvt.perl-lib:                       /usr/lib/urxvt-perls/

URxvt.perl-ext-common:                clipboard

! --- urxvt.keybindings ---
URxvt.keysym.Control-Up:              \033[1;5A
URxvt.keysym.Control-Down:            \033[1;5B
URxvt.keysym.Control-Left:            \033[1;5D
URxvt.keysym.Control-Right:           \033[1;5C
URxvt.keysym.Control-BackSpace:       \033[rC;BS~
URxvt.keysym.Control-Delete:          \033[rC;DEL~

! --- urxvt.clipboard ---
URxvt.clipboard.copycmd:              xclip -i -selection clipboard
URxvt.clipboard.pastecmd:             xclip -o -selection clipboard

URxvt.keysym.Control-Insert:          perl:clipboard:copy
URxvt.keysym.Shift-Insert:            perl:clipboard:paste


